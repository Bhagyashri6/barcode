<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_large_font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="username">
        <item name="android:fontFamily">Georgia</item>
        <item name="android:layout_gravity">center_horizontal|center</item>

        <item name="android:gravity">center</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Login">
        <item name="android:fontFamily">Georgia</item>
        <item name="android:layout_gravity">center_horizontal|center</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

</resources>
